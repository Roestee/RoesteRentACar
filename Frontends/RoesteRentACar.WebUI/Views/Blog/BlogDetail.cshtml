
@{
    ViewData["Title"] = "BlogDetail";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<section class="ftco-section ftco-degree-bg">
    <div class="container">
        <div class="row">
            
            @await Component.InvokeAsync("_HomeLayoutBlogDetailMain")

            <div class="col-md-4 sidebar ftco-animate">
                @await Component.InvokeAsync("_HomeLayoutBlogDetailSearchBox")

                @await Component.InvokeAsync("_HomeLayoutBlogDetailCategories")

                @await Component.InvokeAsync("_HomeLayoutBlogDetailRecentBlogs")

                @await Component.InvokeAsync("_HomeLayoutBlogDetailTagClouds")
            </div>
        </div>
    </div>
</section> 
